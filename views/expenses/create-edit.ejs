<% layout('layouts/boilerplate')%>
<div class="row">
    <h1><%= mode == 'edit' ? 'Uredi' : 'Dodaj' %> strošek</h1>
    <div class="col-md-6">
        <form
            <% if (mode === 'edit'){ %>
                action="/expenses/<%= expense._id %>?_method=PUT"
            <% } else { %>
                action="/expenses"
            <% } %>
            class="validated-form"
            method="POST"
            id="addNewExpense"
            novalidate
        >
            <div class="mb-3">
                <label for="category" class="form-label">Kategorija</label>
                <select
                    class="form-select"
                    id="category"
                    name="expense[category]"
                    required
                >
                    <% if (mode === 'create') { %>
                        <option selected disabled value="">Izberi kategorijo …</option>
                    <% } %>

                    <% for(let category of categories){ %>
                        <option
                            value="<%= category._id %>"
                            <% if (expense?.category._id.equals(category._id)) { %>
                                selected
                            <% } %>
                        >
                            <%= category.name %>
                        </option>
                        <% for(let subCategory of category.subCategories){ %>
                            <option
                                id="Option"
                                value="<%=subCategory._id%>"
                                <% if (expense?.category._id.equals(subCategory._id)) { %>
                                    selected
                                <% } %>
                            >
                                &nbsp;&nbsp;⁃ <%=subCategory.name%>
                            </option>
                        <% } %>
                    </optgroup>
                    <% } %>
                </select>
                <div class="invalid-feedback">Kategorija je obvezna.</div>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Cena</label>
                <div class="input-group">
                    <input
                        id="price"
                        name="expense[cost]"
                        type="number"
                        class="form-control"
                        step=".01"
                        aria-label="Amount"
                        <% if (mode === 'edit') { %>
                            value="<%= expense.cost %>"
                        <% } %>
                        required
                    />
                    <span class="input-group-text">€</span>
                    <div class="invalid-feedback">Cena je obvezna.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Komentar</label>
                <div class="input-group">
                    <textarea
                        id="description"
                        name="expense[description]"
                        type="text"
                        class="form-control"
                    ><%= mode === 'edit' ? expense.description : ''%></textarea>
                </div>
            </div>

            <div class="mb-3">
                <label for="date" class="form-label">Dan Plačila</label>
                <div class="input-group">
                    <input
                        id="date"
                        name="expense[payDate]"
                        type="date"
                        class="form-control"
                        autocomplete
                        required
                        <% if (mode === 'edit') { %>
                            value="<%=expense.payDate.toISOString().substring(0, 10)%>"
                        <% } else { %>
                            value="<%=new Date().toJSON().slice(0, 10)%>"
                        <% } %>
                    />
                    <div class="invalid-feedback">Dan plačila je obvezen.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="user" class="form-label">Plačnik</label>
                <select class="form-select" id="user" name="expense[payer]" required>
                    <% for (let user of users) { %>
                        <option
                            value="<%= user._id %>"
                            <%
                            const isCurrentUser = mode === 'create' && currentUser.equals(user)
                            const isExpensePayer = mode === 'edit' &&  expense?.payer.equals(user)

                            if (isCurrentUser || isExpensePayer) { %>
                                selected
                            <% } %>
                        >
                            <%= user.username %>
                        </option>
                    <% } %>
                </select>
                <div class="invalid-feedback">Plačnik je obvezen!</div>
            </div>

            <div class="mb-3">
                <label class="form-check-label" for="flexSwitchCheckChecked"
                    >Deljen strošek</label
                >
                <div class="form-check form-switch">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        role="switch"
                        id="flexSwitchCheckChecked"
                        name="expense[shared]"
                        value="true"
                        <% if (mode === 'create' || expense?.shared) { %>
                            checked
                        <% } %>
                    />
                </div>
            </div>

            <div class="d-grid col-12 mx-auto">
                <button class="btn btn-info"><%= mode == 'edit' ? 'Uredi' : 'Dodaj' %></button>
            </div>
        </form>

        <% if (mode === 'create') { %>
            <%- include('../partials/recent-expenses', {
                expenses: sharedExpenses,
                title: 'ZADNJI VNEŠENI - SKUPNI'
            }); %>

            <%- include('../partials/recent-expenses', {
                expenses: usersExpenses,
                title: 'ZADNJI VNEŠENI - MOJI'
            }); %>
        <% } %>
    </div>
</div>
