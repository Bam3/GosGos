<% layout('layouts/boilerplate')%>
<div class="row">
    <h1>Uredi strošek</h1>
    <div class="col-md-6">
        <form
            action="/expenses/<%=expenses.expenses._id%>?_method=PUT"
            class="validated-form"
            method="POST"
            id="addNewExpense"
            novalidate
        >
            <div class="mb-3">
                <label class="form-label">Trenutna kategorija</label>
                <h4 class="lead">
                    <%=expenses.expenses.category.parentCategory.name%> -
                    <%=expenses.expenses.category.name%>
                </h4>
            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Kategorija</label>
                <select
                    class="form-select"
                    id="category"
                    name="expense[category]"
                    required
                >
                    <option
                        selected
                        disabled
                        value="<%=expenses.expenses.category._id%>"
                    >
                        <%=expenses.expenses.category.name%>
                    </option>
                    <% for(let category of usersAndCategories.categories){ %>
                    <optgroup label="<%=category.name%>">
                        <% for(let subCategory of category.subCategories){ %>
                        <option value="<%=subCategory._id%>">
                            <%=subCategory.name%>
                        </option>
                        <% } %>
                    </optgroup>
                    <% } %>
                </select>
                <div class="invalid-feedback">Kategorija je obvezna.</div>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Strošek</label>
                <div class="input-group">
                    <input
                        id="price"
                        name="expense[cost]"
                        type="number"
                        class="form-control"
                        step=".01"
                        aria-label="Amount"
                        value="<%=expenses.expenses.cost%>"
                        required
                    />
                    <span class="input-group-text">€</span>
                    <div class="invalid-feedback">Cena je obvezna.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Komentar</label>
                <div class="input-group">
                    <textarea
                        id="description"
                        name="expense[description]"
                        type="text"
                        class="form-control"
                    >
<%= expenses.expenses.description %></textarea
                    >
                </div>
            </div>

            <div class="mb-3">
                <label for="date" class="form-label">Dan Plačila</label>
                <div class="input-group">
                    <input
                        id="date"
                        name="expense[payDate]"
                        type="date"
                        class="form-control"
                        autocomplete
                        required
                        value="<%=expenses.expenses.payDate.toISOString().substring(0, 10)%>"
                    />
                    <div class="invalid-feedback">Dan plačila je obvezen.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="user" class="form-label">Plačnik</label>
                <select class="form-select" id="user" name="expense[payer]">
                    <option selected disabled value>
                        <%= expenses.expenses.payer.username %>
                    </option>
                    <% for(let user of usersAndCategories.users) { %>
                    <option value="<%=user._id%>"><%=user.username%></option>
                    <% } %>
                </select>
                <div class="invalid-feedback">Plačnik je obvezen!</div>
            </div>

            <% if (expenses.expenses.shared) { %>
            <div class="mb-3">
                <label class="form-check-label" for="flexSwitchCheckChecked"
                    >Deljen strošek</label
                >
                <div class="form-check form-switch">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        role="switch"
                        id="flexSwitchCheckChecked"
                        name="expense[shared]"
                        value="true"
                        checked
                    />
                </div>
            </div>
            <% } else {%>
            <div class="mb-3">
                <label class="form-check-label" for="flexSwitchCheckChecked"
                    >Deljen strošek</label
                >
                <div class="form-check form-switch">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        role="switch"
                        id="flexSwitchCheckChecked"
                        name="expense[shared]"
                        value="true"
                    />
                </div>
            </div>
            <% } %>

            <div class="d-grid col-6 mx-auto">
                <button class="btn btn-info">Uredi</button>
            </div>
        </form>
    </div>
</div>
