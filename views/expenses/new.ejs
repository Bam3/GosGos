<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 >
        Dodaj strošek
    </h1>
    <div class="col-md-6">
        <form action="/expenses" method="POST" id="addNewExpense">
            <label for="category">Kategorija</label>
            <select id="category" name="category" class="form-select mb-3" aria-label="category-select">
               <option selected>Izberi...</option>
               <% for(let category of categories){ %>
               <option value="<%=category.name%>"><%=category.name.toUpperCase()%></option>
                <% } %>
            </select>

            <label for="price">Strošek</label>
            <div class="input-group mb-3">
                <input id="price" name="price" type="number" class="form-control" step=".01" aria-label="Amount">
                <span class="input-group-text">€</span>
            </div>

            <label for="description">Komentar</label>
            <div class="input-group mb-3">
                <textarea id="description" name="description" type="text" class="form-control"></textarea>
            </div>

            <label for="date">Dan Plačila</label>
            <div class="input-group mb-3">
                <input id="date" name="payDate" type="date" class="form-control" autocomplete>
            </div>

            <label for="costPeriod">Obdobje</label>
            <div class="input-group mb-4">
                <input id="costPeriod" name="costPeriod" type="month" class="form-control" autocomplete>
            </div>

            <div class="d-grid col-12 mx-auto">
                <button class="btn btn-secondary">Dodaj</button>
            </div>
        </form>
    </div>
    <script>
        const categories = <%- JSON.stringify(categories) %>
    </script>
    <script src="/javascripts/getSubCategories.js"></script>
</div>