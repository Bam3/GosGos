<% layout('layouts/boilerplate')%>
<div class="row">
    <h1>Uredi Viski</h1>
    <div class="col-md-6">
        <form
            action="/whiskies/<%=context.whiskey._id%>?_method=PUT"
            class="validated-form"
            method="POST"
            id="addNewExpense"
            novalidate
        >
            <div class="mb-3">
                <label for="name" class="form-label">Ime</label>
                <div class="input-group">
                    <input
                        id="name"
                        name="whiskey[name]"
                        type="text"
                        class="form-control"
                        aria-label="Whiskey Name"
                        value="<%=context.whiskey.name%>"
                        required
                    />
                    <div class="invalid-feedback">Ime je obvezna.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="region" class="form-label">Regija / Država</label>
                <div class="input-group">
                    <input
                        id="region"
                        name="whiskey[region]"
                        type="text"
                        class="form-control"
                        aria-label="Whiskey Region"
                        value="<%=context.whiskey.region%>"
                        required
                    />
                    <div class="invalid-feedback">
                        Regija oz. država je obvezna.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="age" class="form-label">Starost</label>
                <div class="input-group">
                    <input
                        id="age"
                        name="whiskey[age]"
                        type="text"
                        class="form-control"
                        aria-label="Whiskey age"
                        value="<%=context.whiskey.age%>"
                        required
                    />
                    <div class="invalid-feedback">Starost je obvezna.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Cena</label>
                <div class="input-group">
                    <input
                        id="price"
                        name="whiskey[price]"
                        type="number"
                        class="form-control"
                        step=".01"
                        aria-label="Whiskey Price"
                        value="<%=context.whiskey.price%>"
                        required
                    />
                    <span class="input-group-text">€</span>
                    <div class="invalid-feedback">Znesek je obvezna.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="comment" class="form-label">Komentar</label>
                <div class="input-group">
                    <textarea
                        id="comment%"
                        name="whiskey[comment]"
                        type="text"
                        class="form-control"
                    >
<%= context.whiskey.comment %></textarea
                    >
                </div>
            </div>

            <div class="mb-3">
                <label for="dateOfPurchase" class="form-label"
                    >Dan Nakupa</label
                >
                <div class="input-group">
                    <input
                        id="dateOfPurchase"
                        name="whiskey[dateOfPurchase]"
                        type="date"
                        class="form-control"
                        autocomplete
                        required
                        value="<%=context.whiskey.dateOfPurchase.toISOString().substring(0, 10)%>"
                    />
                    <div class="invalid-feedback">Dan nakupa je obvezen.</div>
                </div>
            </div>

            <div class="d-grid col-12 mx-auto">
                <button class="btn btn-info">Uredi</button>
            </div>
        </form>
    </div>
</div>
