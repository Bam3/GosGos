<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-md-12">
        <h1>Whiskey</h1>
    </div>
    <div class="col-md-12">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ime</th>
                    <th scope="col">Regija/država</th>
                    <th scope="col">Datum nakupa</th>
                    <th scope="col">Cena</th>
                    <th scope="col">Starost</th>
                    <th scope="col">Komentar</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < whiskies.length; i++) { %>
                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <th scope="row"><%= whiskies[i].name %></th>
                    <th scope="row"><%= whiskies[i].region %></th>
                    <td>
                        <a href="/whiskies/<%= whiskies[i].id %>">
                            <%=whiskies[i].dateOfPurchase.toLocaleDateString('sl-SI')
                            %></a
                        >
                    </td>
                    <td><%=whiskies[i].price %> €</td>
                    <td><%=whiskies[i].age %></td>

                    <td><%=whiskies[i].comment %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
