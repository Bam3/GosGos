<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-md-12 mb-3 d-flex align-items-center justify-content-between">
        <h1>Trajniki</h1>
        <a class="btn btn-secondary btn-sm" href="/debits/new">Dodaj</a>
    </div>
    <div class="col-md-12">
        <ul class="list-group">
            <% for(let debit of debits){ %>
                <li class="list-group-item <%= debit.enable ? "list-group-item-success":"list-group-item-secondary" %> d-flex align-items-center justify-content-between">
                    <%=`${debit.category.parentCategory.name} - ${debit.category.name}`%>
                    <a class="btn btn-light btn-sm" href="/debits/<%= debit.id %>/edit">Uredi</a>
                </li>
            <% } %>
        </ul>
    </div>
    <form
            action="/debits/enable"
            class="validated-form"
            method="POST"
            id="addNewDebit"
            novalidate
        >
        <div class="mt-3 d-grid col-4 mx-auto">
            <button class="btn btn-success">Vklop urnika</button>
        </div>
    </form>
</div>
