<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img
                    src="https://images.unsplash.com/photo-1607000975481-9d00e28475fe?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NjN8fHJlZ2lzdGVyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60"
                    alt=""
                    class="card-img-top"
                />
                <div class="card-body">
                    <h5 class="card-title">Registracija</h5>
                    <form
                        action="/register"
                        method="POST"
                        class="validated-form"
                        novalidate
                    >
                        <div class="mb-3">
                            <label class="form-label" for="username"
                                >Uporabniško ime</label
                            >
                            <input
                                class="form-control"
                                type="text"
                                id="username"
                                name="username"
                                required
                                autofocus
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleColorInput" class="form-label"
                                >Barva uporabnika</label
                            >
                            <input
                                type="color"
                                class="form-control form-control-color"
                                id="exampleColorInput"
                                value="#563d7c"
                                title="Izberi barvo uporabnika"
                                name="color"
                                required
                            />
                            <div class="invalid-feedback">
                                Barva glavne kategorije je obvezna.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email"
                                >Elektronska pošta</label
                            >
                            <input
                                class="form-control"
                                type="email"
                                id="email"
                                name="email"
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password"
                                >Geslo</label
                            >
                            <input
                                class="form-control"
                                type="password"
                                id="password"
                                name="password"
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <button class="btn btn-success btn-block">
                            Registracija
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
